# Application
APP_NAME="YouTube Study Buddy"
DEBUG=false

# Server Ports
BACKEND_PORT=8000
WEBSOCKET_PORT=8001
FRONTEND_PORT=5173
NGINX_PORT=80
NGINX_SSL_PORT=443

# URLs (update for production)
API_URL=http://localhost:8000
WS_URL=ws://localhost:8001

# Database
POSTGRES_DB=ytstudy
POSTGRES_USER=ytstudy
POSTGRES_PASSWORD=changeme-strong-password
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=changeme-redis-password
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET_KEY=changeme-jwt-secret-key-min-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# OAuth Providers
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Claude API
CLAUDE_API_KEY=your-claude-api-key

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# CLI Settings
CLI_TIMEOUT=600  # 10 minutes
CLI_WORKERS=5    # Number of parallel workers

# Tor Proxy
TOR_ENABLED=true
TOR_HOST=tor-proxy-1
TOR_PORT=9050

# Credits
DEFAULT_CREDITS=10  # Free tier credits on signup

# File Upload
MAX_FILE_SIZE=10485760  # 10MB

# Session
SESSION_SECRET=changeme-session-secret

# Email (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourdomain.com

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
